<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context/">

    <!--context:component-scan base-package="com.howtodoinjava" /-->

    <!-- SET default mail properties -->
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="smtp.gmail.com"/>
        <property name="port" value="25"/>
        <property name="username" value="southeastinteriorsandexteriors@gmail.com"/>
        <property name="password" value="welcome01"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.transport.protocol">smtp</prop>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
                <prop key="mail.debug">true</prop>
            </props>
        </property>
    </bean>

    <bean id="enquiryMessage" class="org.springframework.mail.SimpleMailMessage" autowire="byName">
        <property name="to" value="leanne_88@hotmail.com"></property>
        <property name="from" value="southeastinteriorsandexteriors@gmail.com"></property>
        <property name="subject" value="New Enquiry"/>
    </bean>

    <bean id="reviewMessage" class="org.springframework.mail.SimpleMailMessage" autowire="byName">
        <property name="to" value="leanne_88@hotmail.com"></property>
        <property name="from" value="southeastinteriorsandexteriors@gmail.com"></property>
        <property name="subject" value="New Review!"/>
    </bean>
</beans>